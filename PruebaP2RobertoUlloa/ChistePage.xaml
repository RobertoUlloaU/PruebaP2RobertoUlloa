<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaP2RobertoUlloa.ChistePage"
             Title="Chiste del Día">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
            x:Name="SetupLabel"
            FontSize="24"
            TextColor="Black"
            HorizontalOptions="Center"
            Text="Aquí aparecerá el chiste" />

        <Label 
            x:Name="PunchlineLabel"
            FontSize="20"
            TextColor="Gray"
            HorizontalOptions="Center"
            Text="..." />

        <Button 
            Text="Obtener chiste"
            Clicked="OnObtenerChisteClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>



