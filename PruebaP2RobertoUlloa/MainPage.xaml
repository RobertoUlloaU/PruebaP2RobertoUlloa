<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaP2RobertoUlloa.MainPage"
             Title="Inicio">

    <VerticalStackLayout Padding="20" Spacing="30">
     
        <Label 
            Text="Bienvenidos a la app de Roberto Ulloa"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
       
        <Button 
            Text="Chistes"
            FontSize="20"
            Clicked="OnChistesClicked" />

        <Button 
            Text="About"
            FontSize="20"
            Clicked="OnAboutClicked" />

        <Image 
            Source="imagenroberto.jpg"
            HeightRequest="200"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>

